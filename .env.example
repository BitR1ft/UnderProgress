# Environment Variables Configuration

# ==============================================================================
# GENERAL CONFIGURATION
# ==============================================================================

# Application Environment
NODE_ENV=development
PYTHON_ENV=development

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL Configuration
POSTGRES_USER=autopentestai
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=autopentestai
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Neo4j Configuration
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_this_secure_password
NEO4J_URI=bolt://neo4j:7687
NEO4J_DATABASE=neo4j
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# ==============================================================================
# BACKEND API CONFIGURATION
# ==============================================================================

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Security
SECRET_KEY=change_this_to_a_very_long_random_secret_key_at_least_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# FRONTEND CONFIGURATION
# ==============================================================================

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ==============================================================================
# AI & LLM CONFIGURATION
# ==============================================================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Anthropic (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# LangSmith (Optional - for debugging)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=autopentestai

# ==============================================================================
# TOOL CONFIGURATION
# ==============================================================================

# Nmap Configuration
NMAP_RATE_LIMIT=1000
NMAP_TIMING_TEMPLATE=4

# Nuclei Configuration
NUCLEI_RATE_LIMIT=150
NUCLEI_BULK_SIZE=25
NUCLEI_TEMPLATES_PATH=/root/nuclei-templates

# Metasploit Configuration
METASPLOIT_HOST=metasploit
METASPLOIT_PORT=55553
METASPLOIT_USER=msf
METASPLOIT_PASSWORD=change_this_secure_password

# ==============================================================================
# DOCKER & INFRASTRUCTURE
# ==============================================================================

# Container Configuration
DOCKER_NETWORK=autopentestai-network
KALI_TOOLS_IMAGE=kalilinux/kali-rolling:latest

# Volume Paths
POSTGRES_DATA_PATH=./postgres-data
NEO4J_DATA_PATH=./neo4j-data
LOGS_PATH=./logs

# ==============================================================================
# LOGGING & MONITORING
# ==============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/autopentestai/app.log

# ==============================================================================
# SECURITY & RATE LIMITING
# ==============================================================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Settings
SESSION_TIMEOUT_MINUTES=120

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# Enable/Disable Features
FEATURE_AI_AGENT=true
FEATURE_AUTO_EXPLOITATION=false
FEATURE_REPORT_GENERATION=true
FEATURE_GRAPH_VISUALIZATION=true

# ==============================================================================
# THIRD-PARTY SERVICES
# ==============================================================================

# Vulnerability Databases
NVD_API_KEY=your_nvd_api_key_here
VULNERS_API_KEY=your_vulners_api_key_here

# Interactsh (for OAST)
INTERACTSH_SERVER=oast.pro
INTERACTSH_TOKEN=your_interactsh_token_here

# ==============================================================================
# TESTING CONFIGURATION
# ==============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://test:test@localhost:5433/autopentestai_test

# HTB Configuration (for validation)
HTB_API_KEY=your_htb_api_key_here
HTB_VPN_CONFIG=/path/to/htb.ovpn

# ==============================================================================
# DEVELOPMENT TOOLS
# ==============================================================================

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Hot Reload
WATCH_FILES=true

# ==============================================================================
# NOTES
# ==============================================================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env to version control
# 3. Rotate all secrets regularly
# 4. Use strong passwords (minimum 16 characters)
# 5. Enable 2FA where available
# 6. Review security settings before production deployment
